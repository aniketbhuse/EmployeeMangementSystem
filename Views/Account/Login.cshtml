
@model EmployeeMangementSystem.ViewModels.LoginViewModel


<style>
    /* Page background */
    .login-page {
        min-height: calc(100vh - 70px);
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        padding-top: 70px;
    }

    /* Login card */
    .login-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 35px;
        width: 360px;
        border-radius: 14px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    }

    .login-card h2 {
        text-align: center;
        margin-bottom: 25px;
        font-weight: 700;
        color: #1a202c;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 6px;
        display: block;
    }

    input {
        width: 100%;
        padding: 11px;
        border-radius: 8px;
        border: 1px solid #cbd5e0;
        font-size: 14px;
    }

    input:focus {
        outline: none;
        border-color: #3182ce;
        box-shadow: 0 0 0 2px rgba(49, 130, 206, 0.3);
    }

    .login-btn {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        background: linear-gradient(135deg, #3182ce, #2b6cb0);
        border: none;
        color: white;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
    }

    .login-btn:hover {
        opacity: 0.9;
    }

    .extra-links {
        margin-top: 15px;
        text-align: center;
    }

    .extra-links a {
        color: #3182ce;
        font-size: 14px;
        text-decoration: none;
        font-weight: 500;
    }

    .extra-links a:hover {
        text-decoration: underline;
    }

    .error-message {
        margin-top: 15px;
        color: #e53e3e;
        text-align: center;
        font-weight: 500;
    }
</style>

<div class="login-page">
    <div class="login-card">
        <h2>Welcome Back</h2>

        <form method="post">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" />
            </div>

            <button type="submit" class="login-btn">Login</button>

            <div class="extra-links">
                <a asp-controller="Account" asp-action="ForgotPassword">
                    Forgot Password?
                </a>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>

