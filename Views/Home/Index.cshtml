@model EmployeeMangementSystem.Models.Employee


@* @{
    ViewData["Title"] = "Home Page";
} *@

<div class="text-center">
    <h2>Employee Portal</h2>
</div>



<form asp-action="Create" method="post" id="EmployeeForm">
    <div class="form-group">
        <label>Frist Name</label>
        <input type="text" id="EmployeeName" placeholder="Frist Name" class="form-control allInput" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input type="text" id="L_Name" placeholder="Last Name" class="form-control allInput" />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" id="Phone_Number" placeholder="Phone Number" class="form-control allInput" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" id="Address" placeholder="Address" class="form-control allInput" />
    </div>

    <div class="form-group">
        <label>Role</label>
        @Html.DropDownList("RoleId", ViewBag.RoleList as SelectList, "Select Role", new { @class = "form-control allInput" })
    </div>

    <div class="form-group">
        <label>Department</label>
        @Html.DropDownList("DepartmentId", ViewBag.DepartmentList as SelectList, "Select Department", new { @class = "form-control allInput" })
        <span class="text-danger">@Html.ValidationMessage("DepartmentId")</span>
    </div>
    <div class="form-group">
        <label>Joning Date</label>
        <input type="date" id="JoiningDate" class="form-control allInput" />
    </div>

    <button type="submit" id="submitBtn" class="btn btn-primary">Add Employee</button>
</form>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #fff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px;
    }

    .custom-form {
        max-width: 600px;
        margin: auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

        .custom-form h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
            color: #00796b;
        }

    .form-group label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #00796b;
            box-shadow: 0 0 5px rgba(0, 121, 107, 0.4);
        }

    .btn-primary {
        background-color: #00796b;
        border-color: #00796b;
        border-radius: 6px;
    }

        .btn-primary:hover {
            background-color: #004d40;
            border-color: #004d40;
        }

    .text-danger {
        font-size: 0.9em;
    }
    .allInput{
        width: 400px;
    }
</style>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>